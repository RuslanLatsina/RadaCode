@model RadaCode.Security.ViewModels.IdeaFormViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a idea</h2>

@using (Html.BeginForm("Create", "Ideas"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.EditorFor(m => m.Idea, new
   {
       htmlAttributes = new
       {
           @class = "form-control ",
           @placeholder = "Input your idea",
           @rows = 5,
           
       }
        })
        @Html.ValidationMessageFor(m => m.Idea)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
